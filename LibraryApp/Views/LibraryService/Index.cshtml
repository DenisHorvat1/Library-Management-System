@model IEnumerable<LibraryApp.Models.Book>

@{
    ViewData["Title"] = "Rent and return Book";
}



<h2>Return a Book</h2>

<form asp-action="ReturnBook">
    <div class="form-group">
        <label for="userId">User ID:</label>
        <select id="userId" name="userId" class="form-control" asp-items="ViewBag.UsersReturn" required></select>
    </div>
    <div class="form-group">
        <label for="bookId">Book ID:</label>
        <select id="bookId" name="bookId" class="form-control" asp-items="ViewBag.BooksReturn" required></select>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Return</button>
</form>


<h2>Rent a book</h2>

<form asp-action="RentBook">
    <div class="form-group">
        <label for="userId">User ID:</label>
        <select id="userId" name="userId" class="form-control" asp-items="ViewBag.UsersRent" required></select>
    </div>
    <div class="form-group">
        <label for="bookId">Book ID:</label>
        <select id="bookId" name="bookId" class="form-control" asp-items="ViewBag.BooksRent" required></select>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Rent</button>
</form>

<br />
<h2>Actions</h2>
<div class="row">
    <div class="col">
        <form asp-action="Details">
            <button type="submit" class="btn btn-primary">Users with Transaction History</button>
        </form>
    </div>
    <div class="col">
        <form asp-action="RentedBooks">
            <button type="submit" class="btn btn-primary">Rented Books</button>
        </form>
    </div>
    <div class="col">
        <form asp-action="Details">
            <button type="submit" class="btn btn-primary">Details</button>
        </form>
    </div>
</div>

